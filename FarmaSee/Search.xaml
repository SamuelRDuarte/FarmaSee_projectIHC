<Page x:Class="FarmaSee.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmaSee"
        mc:Ignorable="d"
        Title="Search" Height="736" Width="414">

    <Grid Background="#00517C">
        <Label Style="{StaticResource TitulolabelStyle}" Margin="152,10,152,0">Search</Label>

        <TextBox Template="{StaticResource SearchBoxTemplate}" Style="{StaticResource SearchBoxStyle}" Text=" Search a farmacy..." Margin="78,88,70,0" />

        <ListBox Name="Histórico" Background="Transparent" Padding="0" Margin="0,148,0,0.4">
            <ListBoxItem Style="{StaticResource SearchListItemStyle}" >
                <StackPanel>
                    <Label Style="{StaticResource FarmaciaLabelStyle}">Farmácia Oudinot</Label>
                    <Label FontSize="14">Av. Dr. Lourenço Peixinho 145, 3800-166 Aveiro</Label>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Style="{StaticResource SearchListItemStyle}" >
                <StackPanel>
                    <Label Style="{StaticResource FarmaciaLabelStyle}">Farmácia Central - Aveiro</Label>
                    <Label FontSize="14">Av. Dr. Lourenço Peixinho 145, 3800-166 Aveiro</Label>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Style="{StaticResource SearchListItemStyle}" >
                <StackPanel>
                    <Label Style="{StaticResource FarmaciaLabelStyle}">Farmácia Nova</Label>
                    <Label FontSize="14">Av. Dr. Lourenço Peixinho 145, 3800-166 Aveiro</Label>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Style="{StaticResource SearchListItemStyle}" >
                <StackPanel>
                    <Label Style="{StaticResource FarmaciaLabelStyle}">Farmácia Moderna</Label>
                    <Label FontSize="14">Av. Dr. Lourenço Peixinho 145, 3800-166 Aveiro</Label>
                </StackPanel>
            </ListBoxItem>
        </ListBox>

        <Image Source="keyboard.png" Margin="0,421,0,0.4" Stretch="Fill"></Image>
    </Grid>
</Page>
