                    <Label FontSize="18" FontWeight="DemiBold">Birthday:</Label>
                    <Label FontSize="18">25/05/1888</Label>
                </StackPanel>
            </ListViewItem>
            <ListViewItem Margin="0,10,0,0" HorizontalAlignment="Stretch" Background="#00657C" Height="50" Padding="5" >
                <StackPanel Orientation="Horizontal" Width="398">
                    <Label FontSize="18" FontWeight="DemiBold">Email:</Label>
                    <Label FontSize="18">tozedasquintas@ua.pt</Label>
                </StackPanel>
            </ListViewItem>
            <ListViewItem Margin="0,10,0,0" HorizontalAlignment="Stretch" Background="#00657C" Height="50" Padding="5" >
                <StackPanel Orientation="Horizontal" Width="398">
                    <Label FontSize="18" FontWeight="DemiBold">Telemovél:</Label>
                    <Label FontSize="18">9677...</Label>
                </StackPanel>
            </ListViewItem>
