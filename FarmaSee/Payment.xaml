<Page x:Class="FarmaSee.Payment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmaSee"
        mc:Ignorable="d"
        Title="Payment" Height="700" Width="414">
    <Grid Background="#00517C">
        <Label Style="{StaticResource TitulolabelStyle}">Payment</Label>

        <Grid Margin="0,60,0,70">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*"></RowDefinition>
                <RowDefinition Height="0.5*"></RowDefinition>
                <RowDefinition Height="0.5*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Background="#196289" Margin="0,0,0,10">
                <Label Content="Purchase List" HorizontalAlignment="Center" Foreground="White" FontWeight="DemiBold" FontSize="20" />
                <ListBox x:Name="Medicines" Background="Transparent">
                    <ListBoxItem Style="{StaticResource ListItemStyle}" Content="Medicine 1" />
                    <ListBoxItem Style="{StaticResource ListItemStyle}" Content="Medicine 2" />
                    <ListBoxItem Style="{StaticResource ListItemStyle}" Content="Medicine 3" />
                    <ListBoxItem Style="{StaticResource ListItemStyle}" Content="Medicine 4" />
                </ListBox>
            </StackPanel>

            <StackPanel Grid.Row="1" Background="#196289" Margin="0,0,0,10">
                <Label Content="Delivery" HorizontalAlignment="Center" Foreground="White" FontWeight="DemiBold" FontSize="20" Margin="0,0,0,20"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="At home" Style="{StaticResource PaymentButtonStyle}"></Button>
                    <Button Grid.Column="1" Content="Pick up" Style="{StaticResource PaymentButtonStyle}"></Button>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" Background="#196289" Margin="0,0,0,10">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Image Width="20" Height="20" Source="payment_icon.png"></Image>
                    <Label Content="Payment" Foreground="White" FontWeight="DemiBold" FontSize="20" Margin="0,0,0,20" />
                </StackPanel>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="MB Way" Style="{StaticResource PaymentButtonStyle}"></Button>
                    <Button Grid.Column="1" Content="At delivery" Style="{StaticResource PaymentButtonStyle}"></Button>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Margin="0,650,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Cancel" Foreground="Red" Style="{StaticResource PaymentButtonsStyle2}"></Button>
            <Button Grid.Column="1" Content="Order" Foreground="Blue"  Style="{StaticResource PaymentButtonsStyle2}"></Button>
        </Grid>
    </Grid>
</Page>
